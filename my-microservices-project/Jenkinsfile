pipeline {
    agent any

    environment {
        IMAGE_A = 'your-dockerhub-username/service-a:latest'
        IMAGE_B = 'your-dockerhub-username/service-b:latest'
        REGISTRY_CREDENTIALS = 'dockerhub-credentials'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/my-microservices-project.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                sh 'docker build -t $IMAGE_A ./src/service-a'
                sh 'docker build -t $IMAGE_B ./src/service-b'
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push $IMAGE_A
                        docker push $IMAGE_B
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f k8s/'
            }
        }
    }
}